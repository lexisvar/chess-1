#!/usr/bin/js

var requirejs = require("requirejs");
var fs = require("fs");

requirejs.config({
	nodeRequire: require,
	paths: {
		"lib": "/var/www/lib/js"
	},
	map: {
		"*": {
			"chess": "lib/chess"
		}
	}
});

var testsDir = "./tests";

requirejs(fs.readdirSync(testsDir).map(function(filename) {
	return testsDir + "/" + filename;
}));